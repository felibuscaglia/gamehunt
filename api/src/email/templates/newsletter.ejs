<!doctype html>
<html lang="en">
   <head>
      <%- include('./shared/head.ejs', { title: 'GameHunt Daily Newsletter' }) %>
      <style>
         .games {
         padding: 24px;
         background-color: white;
         width: 60vw;
         }
         .date {
         font-weight: 600;
         font-size: 12px;
         line-height: 24px;
         }
         .thumbnail {
         height: 48px;
         width: 48px;
         border-radius: 3px;
         background-position: center;
         background-repeat: no-repeat;
         background-size: cover;
         }
         table {
         border-collapse:collapse;
         border-spacing:0 10px;
         margin-top:10px;
         }
         .game {
         padding: 0 10px 18px 10px;
         border-bottom: 1px solid #eef2ff;
         }
         .discover-more-btn {
         background-color: rgba(126, 87, 194, 0.2);
         display: block;
         color: #7e57c2;
         font-size: 14px;
         font-weight: 600;
         text-align: center;
         padding: 14px;
         margin-top: 24px;
         border-radius: 5px;
         }
         td {
         box-sizing: border-box; 
         padding: 18px 10px; 
         vertical-align: center;
         }
         .game-name {
         display: block;
         margin-top: 1.33em;
         margin-bottom: 1.33em;
         margin-left: 0;
         margin-right: 0;
         font-weight: bold;
         }
      </style>
   </head>
   <body>
      <div class="games">
      <h6 class="date primary-brand-color">
        <%= date %>
      </h6>
      <h1>Yesterday's Top Games</h1>
      <table>
         <% games.forEach(game => { %>
            <tr class="game">
               <td>
                  <div
                     class="thumbnail"
                     style="
                     background-image: url('<%= game.thumbnail.url %>');
                     "
                     />
               </td>
               <td class="game-name">
                  <%= game.name %>
                  <% if (game.tagline !== null) { %>
                     <span style="font-weight: 400;">â€” <%= game.tagline %></span>
                   <% } %>
               </td>
            </tr>
         <% }); %>
      </table>
      <a href="<%= leaderboard_url %>" target="_blank" class="discover-more-btn">Discover many more</a>
      </div>
   </body>
</html>